{
	"manifest_version": 2,
	"version": "3.3",
	"name" :"advice plug in 1",
	"description": "A plug in to display advice",
	"icons":
	{
		"16": "img/icon16.png",
		"48": "img/icon48.png"
	},
	
	 "background": {
    "scripts": ["jquery-3.3.1.js","background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "img/icon.png"
  },
	
	"content_scripts":
	[	
		{
			"matches":
			[
			"https://worker.mturk.com/"
			],
			"js":["jquery-3.3.1.js","advicebox.js"],
			"css":["advicebox.css"]
		},
		{
			"matches":
			[
			"https://worker.mturk.com/*"
			],
			"js":["jquery-3.3.1.js","getEarningsData.js"]
		},
		{
			"matches":
			[
			"<all_urls>"
			],
			"js":["jquery-3.3.1.js","postNewEarningData.js"]
		},
		{
			"matches":
			[
			"<all_urls>"
			],
			"js":["jquery-3.3.1.js","trackActivity2.js"]
		},
		
		{
			"matches":
			[
			"https://worker.mturk.com/projects/*/tasks*"
			],
			"js":["jquery-3.3.1.js","getTaskLinks.js"]
		}

	],
	"permissions": ["tabs","<all_urls>", "storage","webNavigation"],
	"web_accessible_resources": ["*.js","img/right_arrow.svg","img/left_arrow.svg", "img/left_arrow.svg", "img/plus.svg","img/like.svg", "img/dislike.svg","http://localhost/*"]
}
